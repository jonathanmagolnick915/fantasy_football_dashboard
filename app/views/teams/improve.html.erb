<div class="text-center">
  <h2>
    <%= @team.name %>
  </h2>
  <div class="btn btn-primary">
    <%= link_to 'Back', team_path(@team) %>
  </div>
</div>
<h3>Worst Players</h3>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Position</th>
      <th>Name</th>
      <th>Bye Week</th>
      <th>Points</th>
    </tr>
    </thead>
    <tbody>
    <% @team.worst_players.each do |player| %>
        <tr>
          <td>
            <%= player.position %>
          </td>
          <td>
            <%= player.name %>
          </td>
          <td>
            <%= player.bye_week %>
          </td>
          <td class="points">
            <%= player.points %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
    <h3>Free Agents With Higher Projections</h3>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Position</th>
        <th>Name</th>
        <th>Team</th>
        <th>Bye Week</th>
        <th>Points</th>
      </tr>
      </thead>
      <tbody>
      <% @team.better_free_agents.each do |player| %>
          <tr>
            <td>
              <%= player.position %>
            </td>
            <td>
              <%= player.name %>
            </td>
            <td>
              <%= player.team %>
            </td>
            <td>
              <%= player.bye_week %>
            </td>
            <td class="points">
              <%= player.points %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
