<div class="text-center">
<h2>
  <%= @team.name %>
</h2>
  <div class="btn btn-primary">
    <%= link_to 'Improve Team', improve_team_path(@team) %>
  </div>
</div>
<div class="row">
  <h3>
    Starters
  </h3>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Position</th>
      <th>Name</th>
      <th>Bye Week</th>
      <th>Points</th>
    </tr>
    </thead>
    <tbody>
    <% @team.active.each do |player| %>
        <tr>
          <td>
            <%= player.position %>
          </td>
          <td>
            <%= player.name %>
          </td>
          <td>
            <%= player.bye_week %>
          </td>
          <td class="points">
            <%= player.points %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<div class="row">
  <h3>Bench</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Position</th>
        <th>Name</th>
        <th>Bye Week</th>
        <th>Points</th>
      </tr>
    </thead>
    <tbody>
    <% @team.bench.each do |player| %>
        <tr>
          <td>
            <%= player.position %>
          </td>
          <td>
            <%= player.name %>
          </td>
          <td>
            <%= player.bye_week %>
          </td>
          <td class="points">
            <%= player.points %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>



